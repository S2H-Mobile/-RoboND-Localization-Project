<?xml version="1.0"?>
<launch>

  <!-- Map server -->
  <arg name="map_file" default="$(find rover)/../maps/jackal_race.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="rover/laser/scan"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>

    <!-- Filter -->
    <!-- Transform tolerance. See common questions in classroom material. -->
    <param name="transform_tolerance" value="0.2"/>

    <!-- Number of particles. Defaults to minimum 100, maximum 5000. -->
    <param name="min_particles" value="100"/>
    <param name="max_particles" value="1000"/>
    
    <!-- Initial mean pose of the filter array. -->
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    
    <!-- Odometry model -->
    <param name="odom_model_type" value="diff-corrected"/>

    <!-- Noise parameters, as defined in Probabilistic Robotics book -->
    <param name="odom_alpha1" value="0.05"/>
    <param name="odom_alpha2" value="0.05"/>
    <param name="odom_alpha3" value="0.01"/>
    <param name="odom_alpha4" value="0.05"/>

    <!-- Laser model -->
    <param name="laser_model_type" value="likelihood_field"/>

    <!-- Maximum distance for obstacle inflation. Defaults to 2.0 meters. -->
    <param name="laser_likelihood_max_dist" value="4.0"/>
    
    <!-- Mixture weight for the z_hit part of the model. -->
    <param name="laser_z_hit" value="0.95"/>
    
    <!-- Mixture weight for the z_rand part of the model. -->
    <param name="laser_z_rand" value="0.05"/>
  </node>

<!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find rover)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rover)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rover)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rover)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rover)/config/base_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="cmd_vel"/>
    <remap from="odom" to="odom"/>
    <remap from="scan" to="rover/laser/scan"/>

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

  </node>
</launch>
